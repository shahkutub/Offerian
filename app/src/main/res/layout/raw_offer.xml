<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#656565"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/raw_border_shadow"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_product_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:src="@drawable/img_hotel"
            android:scaleType="fitXY"
            ></ImageView>
        <TextView
            android:id="@+id/tvCamp_ribon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:visibility="gone"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:background="#3498DB"
            android:text="FREE Gift"
            android:textColor="@color/white"
            android:rotation="-40"
            android:layout_marginTop="@dimen/_25sdp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_105sdp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvItemType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="#E74C3C"
                android:padding="@dimen/_3sdp"
                android:layout_toLeftOf="@id/imgLogo"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/img_britto"
                android:layout_centerInParent="true"
                ></de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/tvOfferLft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#E74C3C"
                android:padding="@dimen/_3sdp"
                android:layout_toRightOf="@id/imgLogo"
                />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:text="lorem ipsum dolor lorem ipsum dolor lorem ipsum dolor lorem ipsum dolor"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:text="50 Point"
            android:background="#00C7EC"
            />

        <ImageView
            android:id="@+id/imgVerified"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toRightOf="@+id/tvPoint"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_verified_user_white_24dp"
            />

        <ImageView
            android:id="@+id/imgLocaOrDalyver"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toRightOf="@+id/imgVerified"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_location_on_white_24dp"
            />
        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="More"
            android:background="@drawable/border_more"
            />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>