<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/raw_border_shadow"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/img_hotel"
            android:scaleType="fitXY"
            ></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_125sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="#E74C3C"
                android:padding="@dimen/_5sdp"
                android:layout_toLeftOf="@id/imgLogo"
                />
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/img_britto"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                ></ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="#E74C3C"
                android:padding="@dimen/_5sdp"
                android:layout_toRightOf="@id/imgLogo"
                />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_15sdp"
        android:text="lorem ipsum dolor lorem ipsum dolor lorem ipsum dolor lorem ipsum dolor"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_centerVertical="true"
            android:text="50 Point"
            android:background="@drawable/point_bg"
            />

        <ImageView
            android:id="@+id/imgVerified"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toRightOf="@+id/tvPoint"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_verified_user_white_24dp"
            />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_toRightOf="@+id/imgVerified"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_location_on_white_24dp"
            />

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>